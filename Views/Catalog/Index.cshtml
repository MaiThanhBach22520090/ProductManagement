@model IEnumerable<ProductManagement.Models.Catalog>

@{
    ViewBag.Title = "Danh sách danh mục";
}

<h2>Danh sách danh mục</h2>

<p>
    @Html.ActionLink("Tạo danh mục mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CatalogName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CatalogName)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.CatalogCode }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.CatalogCode }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.CatalogCode }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
